<%= turbo_frame_tag :sign_up do %>
  <%= form_with url: sign_up_path, model: @user do |form| %>
    <% if @user.errors.any? %>
      <div class="red">
        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
    </div>

    <div class="mb-4">
    <%= form.label :phone_number %>
    <%= form.phone_field :phone_number %>
    </div>

    <div class="mb-4">
    <%= form.label :zip_code, "ZIP code" %>
    <%= form.text_field :zip_code %>
    </div>

    <div>
    <%= form.button "Sign Up" %>
    </div>
  <% end %>
<% end %>
